@model QuanLyThuoc.ViewModel.LoginVM

@{
    ViewData["Title"] = "DangNhap";
}


<!-- Checkout Page Start -->
<div class="container-fluid py-5 mt-4">
    <div class="container py-5">
        <h1 class="mb-4">Đăng Nhập</h1>
        <form asp-action="DangNhap" asp-route-returnurl="@ViewBag.ReturnUrl">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            @if (ViewData.ModelState["loi"] != null)
            {
                <p class="text-danger">@ViewData.ModelState["loi"].Errors[0].ErrorMessage</p>
            }
            <div class="row">
                <div class="form-item">
                    <label asp-for="@Model.UserName" class="form-label my-3"></label><sup>*</sup>
                    <input asp-for="@Model.UserName" class="form-control">
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                </div>
                <div class="form-item">
                    <label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
                    <input asp-for="@Model.Password" class="form-control">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Đăng Nhập</button>
            </div>
        </form>
    </div>
</div>
<!-- Checkout Page End -->
