@model IEnumerable<QuanLyThuoc.ViewModel.MenuDanhmucVM>

@{
    ViewData["Title"] = "Default";
}

<style>
    .fruite-img img {
        height: 200px;
        object-fit: cover;
    }
    .fruite-item h4 {
        font-size: 18px;
        font-weight: bold;
        height: 45px;
        overflow: hidden;
    }
    .fruite-item p {
        height: 50px;
        overflow: hidden;
        margin-bottom: 10px;
    }
</style>


<div class="col-lg-12">
    <div class="mb-3">
        <h4>Danh Mục</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach (var item in Model)
            {
                <li>
                    <div class="d-flex justify-content-between fruite-name">
                        <a asp-controller="Thuoc" asp-action="Index" asp-route-danhmuc="@item.MaDanhMuc">
                            <i class="fas fa-apple-alt me-2"></i>@item.TenDanhMuc
                        </a>
                        <span>@item.Soluong</span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>